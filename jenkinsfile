 pipeline {
   agent any
 
      stages
	{
         stage('checkoutstage')
	{
	steps
	{
	  checkout scm
        }
     }
       stage ('terraform init & plan & apply')
       {
       
        steps 
             {
	      
               sh ' terraform init ' 
	       sh ' terraform plan -out plan.out'
               sh ' terraform apply -auto-approve plan.out '
       }
      }
    }
    }
