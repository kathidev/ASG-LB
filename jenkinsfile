 pipeline {
   agent any
 
      stages
	{
         stage('checkoutstage')
	{
	steps
	{
	  checkout scm
        }
     }
       stage ('terraform init & plan & apply')
       {

        steps 
             {
               sudo sh ' terraform init '
               sudo sh ' terraform plan '
               sudo sh ' terraform apply -input = yes '
       }
      }
    }
